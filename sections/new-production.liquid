<div class="new_production new_production_{{- section.id -}}">
    {% if section.settings.title != blank %}
      <h2 class="section_heading">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="new_production_container">
      {% for block in section.blocks %}
        <div class="new_production_single {% if forloop.last %} last {% endif %}">
          {% if block.settings.image != blank %}
          <div class="img_wrapper">
            <img src="{{ block.settings.image | img_url:'master' }}"/>
          </div>
          {% endif %}
          <div class="heading_text_container">
            {% if block.settings.title != blank %}
            <h3 class="heading">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.paragraph != blank %}
              <div class="text">
                {{ block.settings.paragraph }}
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
</div>
<style>
  .new_production_{{- section.id -}}{
    {% if section.settings.bg_option == 'clr' %}
      background:{{section.settings.background}};
    {% else %}
      background: url("{{ section.settings.bg_img | img_url:'master' }}");
      background-repeat: repeat;
      background-position: center;
    {% endif %}
  }
  .new_production{
    padding:50px 15px;
  }
  .new_production .section_heading{
    color:#fff;
    font-size: 60px;
    padding: 25px 0;
    border-bottom: 1px solid #ccc;
    text-align: center;
    line-height: 55px;
    margin:0;
    text-transform: none;
  }
  .new_production .new_production_container {
    max-width: 965px;
    margin: 40px auto 0 auto;
}
  .new_production .new_production_single {
    display: grid;
    column-gap: 30px;
    grid-template-columns: 150px 1fr;
    margin-bottom: 50px;
}
 .new_production  .new_production_single.last{
    margin-bottom:0px;
  }
  .new_production .img_wrapper img {
    max-width: 60px;
}
  .new_production .heading_text_container .heading{
    text-align: left;
    color: #fff;
    margin: 0;
}
  .new_production .heading_text_container .text,.new_production  .heading_text_container  .text p {
    color: #fff;
    text-align: left;
    font-size: 14px;
    line-height: 20px;
}

  @media only screen and (max-width:768px){
    .new_production .section_heading{
      font-size: 32px;
      line-height: 36px;
    }
    .new_production .new_production_single {
        display: grid;
        gap: 15px;
        grid-template-columns: 1fr;
        margin-bottom: 25px;
    }
  }
</style>
{% schema %}
  {
    "name": "New Production",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default":"Production process"
      },
      {
        "type": "color_background",
        "id": "background",
        "label": "Background",
        "default": "linear-gradient(#ffffff, #000000)"
      },
      {
        "type": "image_picker",
        "id": "bg_img",
        "label": "Backgorund Image"
      },
      {
        "type": "select",
        "id": "bg_option",
        "label": "Background",
        "options": [
          {
            "value": "img",
            "label": "Image"
          },
          {
            "value": "clr",
            "label": "Color"
          }
        ],
        "default": "clr"
      }

    ],
    "blocks": [
       {
         "name": "Production",
         "type": "text",
         "settings": [
           {
             "type": "image_picker",
             "id": "image",
             "label": "Image"
           },
           {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default":"01. Digital illustration"
          },
           {
            "type": "richtext",
            "id": "paragraph",
            "label": "Paragraph",
             "default":"<p>To begin the bespoke digital process, our creative team in collaboration with design consultant makes a digital illustration of the custom project, which is shared with the customer in advance and then with the production team, once the customer approves.</p>"
          }
         ]
       }
    ],
    "presets": [
      {
        "name": "New Production"
      }
    ]
  }
{% endschema %}